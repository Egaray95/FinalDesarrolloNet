@model ClinicaP2.Models.Paciente

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="bg-info">Registrar paciente</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @*<div class="form-group">
            @Html.LabelFor(model => model.CodPac, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CodPac, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CodPac, "", new { @class = "text-danger" })
            </div>
        </div>*@

    <div class="form-group">
        <b class="col-md-2 control-label">NOMBRE</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Persona.PerNombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Persona.PerNombre, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <b class="col-md-2 control-label">APELLIDO</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Persona.PerApellido, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Persona.PerApellido, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <b class="col-md-2 control-label">DNI</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Persona.PerDni, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Persona.PerDni, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <b class="col-md-2 control-label">RUC</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Persona.PerRuc, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Persona.PerRuc, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <b class="col-md-2 control-label">TELEFONO</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Persona.PerTelefono, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Persona.PerTelefono, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <b class="col-md-2 control-label">CORREO</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Persona.PerCorreo, new { htmlAttributes = new { @class = "form-control"} })
            @Html.ValidationMessageFor(model => model.Persona.PerCorreo, "", new { @class = "text-danger" })
        </div>
    </div>

    @* GENERO PACIENTE  0=MUJER : 1=HOMBRE *@
    <div class="form-group">
        <b class="col-md-2 control-label">GENERO</b>
        <div class="col-md-10">
            @{
                List<SelectListItem> lis = new List<SelectListItem>();
                lis.Add(new SelectListItem() { Text = "Mujer", Value = "0" });
                lis.Add(new SelectListItem() { Text = "Hombre", Value = "1" });
            }
            @Html.DropDownListFor(x => x.Persona.PerGenero, lis, "Seleccionar", new { @class = "form-control" })


        </div>
    </div>



    <div class="form-group">
        <b class="col-md-2 control-label">FECHA DE NACIMIENTO</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.PacFechaNacimiento, new { htmlAttributes = new { @class = "form-control", @type = "date" } })

            @*<input class="form-control" type="date">*@
        </div>
    </div>




    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Registrar Paciente" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div class="btn btn-default">
    @Html.ActionLink("Regresar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
